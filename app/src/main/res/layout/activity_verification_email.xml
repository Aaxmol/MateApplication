<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:weightSum="9"
    tools:context=".VerificationEmailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="175dp"
                    android:layout_height="185dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/logo_mate"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center">

                <TextView
                    android:id="@+id/text_gere_ta_colocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/gere_ta_coloc"
                    android:textColor="#000000"
                    android:textSize="15sp">

                </TextView>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <View
                android:id="@+id/logo2"
                android:layout_width="286dp"
                android:layout_height="411dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/rectangle_verification_email"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="@string/envoi_mail"
                android:textColor="@color/black"
                android:textSize="15sp">

            </View>

            <RelativeLayout
                android:id="@+id/envoi_mail"
                android:layout_width="240dp"
                android:layout_height="411dp"
                android:layout_marginLeft="23sp">

                <ImageView
                    android:id="@+id/lodo_loading"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/loading_icon"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="40dp" />

                <TextView
                    android:id="@+id/text_email_envoye"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="70dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="@string/envoi_mail"
                    android:textSize="15sp"
                    android:textColor="#3F4148"/>

                <TextView
                    android:id="@+id/rappel_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:paddingTop="35sp"
                    android:text="@string/ex_email"
                    android:textSize="15sp"
                    android:textColor="#9E9E9E"/>

                <Button
                    android:id="@+id/button_renvoyer_email_verification_email"
                    android:layout_width="150.85dp"
                    android:layout_height="25.65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="260dp"
                    android:background="@drawable/renvoyer_email_verification_email_button"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/renvoyer"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/verifie_tes_spams_avant_de_renvoyer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="190dp"
                    android:fontFamily="@font/poppins_medium_italic"
                    android:text="@string/verifie_tes_spams_avant_de_renvoyer"
                    android:textSize="10sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20sp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center|bottom"
                    android:text="@string/revenir_sur_appli_apres_verif"
                    android:textColor="#3F4148"
                    android:textSize="15sp" />

            </RelativeLayout>

        </RelativeLayout>




    </LinearLayout>

</LinearLayout>