<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:weightSum="9"
    tools:context=".CreerUneColocationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="164dp"
                    android:layout_height="156dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/logo_mate"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center">

                <TextView
                    android:id="@+id/text_gere_ta_colocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/gere_ta_coloc"
                    android:textColor="#000000"
                    android:textSize="15sp">

                </TextView>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <EditText
            android:id="@+id/text_input_nom_colocation"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/nom_colocation_input"
            android:fontFamily="@font/poppins_medium_italic"
            android:hint="@string/nom_de_la_coloc"
            android:paddingStart="12dp"
            android:paddingTop="5dp"
            android:textSize="15sp"
            android:textColor="#9E9E9E"
            android:textColorHint="#9E9E9E">


        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/text_participant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-100dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Participants"
            android:textColor="#3F4148"
            android:textSize="15sp" />

            <EditText
                android:id="@+id/text_input_nom_colocataire1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/nom_colocataire_input"
                android:fontFamily="@font/poppins_medium_italic"
                android:hint="@string/nom_colocataire"
                android:paddingStart="10sp"
                android:textColor="#9E9E9E"
                android:textColorHint="#9E9E9E"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/text_input_email_colocataire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/email_colocataire_input"
                android:fontFamily="@font/poppins_medium_italic"
                android:hint="@string/email_colocataire"
                android:paddingStart="10sp"
                android:textColor="#9E9E9E"
                android:textColorHint="#9E9E9E"
                android:textSize="15sp" />

    </LinearLayout>





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/text_affichage_nom_colocataire"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="65dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#3F4148"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top|center">

        <Button
            android:id="@+id/ajouter_un_autre_colocataire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/suivant_button_vers_choisir_nom_colocataire"
            android:text="Ajouter autre coloc"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="20sp">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="top|center">

        <Button
            android:id="@+id/suivant_vers_choisir_colocataire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/suivant_button_vers_choisir_nom_colocataire"
            android:text="@string/suivant_vers_choisir_nom_colocataire"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="20sp">
        </Button>
    </LinearLayout>


</LinearLayout>